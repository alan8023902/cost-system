# 建材成本管理系统 - 环境变量配置示例
# 复制此文件为 .env 并修改为实际的生产环境配置

# ==================== 数据库配置 ====================
# MySQL root 密码（生产环境请使用强密码）
MYSQL_ROOT_PASSWORD=your_strong_mysql_password_here

# 数据库名称
MYSQL_DATABASE=cost_system

# ==================== Redis 配置 ====================
# Redis 密码（生产环境请使用强密码）
REDIS_PASSWORD=your_strong_redis_password_here

# ==================== 后端配置 ====================
# Spring 配置文件（prod/dev）
SPRING_PROFILES_ACTIVE=prod

# 数据库连接配置
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/cost_system?useUnicode=true&characterEncoding=utf8&useSSL=false&serverTimezone=Asia/Shanghai
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_strong_mysql_password_here

# Redis 连接配置
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=your_strong_redis_password_here

# ==================== JWT 配置 ====================
# JWT 密钥（至少32字符，推荐64字符以上的随机字符串）
# 生成方法: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long_random_string_change_this

# JWT Token 有效期（毫秒）
JWT_EXPIRATION=86400000

# JWT 刷新 Token 有效期（毫秒）
JWT_REFRESH_EXPIRATION=604800000

# ==================== 文件上传配置 ====================
# 文件上传路径
FILE_UPLOAD_PATH=/app/uploads

# 文件大小限制
FILE_MAX_SIZE=100MB

# ==================== 日志配置 ====================
# 日志文件路径
LOG_FILE_PATH=/app/logs/cost-system.log

# ==================== Spring Security 配置 ====================
# 管理员用户名
SPRING_SECURITY_USER=admin

# 管理员密码（生产环境请修改）
SPRING_SECURITY_PASSWORD=your_admin_password_here

# ==================== 端口配置 ====================
# 后端服务端口
BACKEND_PORT=31943

# 前端服务端口
FRONTEND_PORT=38443

# MySQL 端口
MYSQL_PORT=3306

# Redis 端口
REDIS_PORT=6379

# ==================== 安全提示 ====================
# 1. 生成强密码: openssl rand -base64 32
# 2. 生成 JWT Secret: openssl rand -base64 64
# 3. 不要将 .env 文件提交到版本控制
# 4. 定期更换密码和密钥
# 5. 使用不同的密码用于不同的服务
